<Application x:Class="Size.Program"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Size">
    <JumpList.JumpList>
        <JumpList ShowRecentCategory="True" ShowFrequentCategory="True">
            <JumpTask
                Title="PowerShell ウィンドウを開く"
                ApplicationPath="PowerShell.exe"
                Arguments="{x:Static local:Program.baseDirectory}"/>
        </JumpList>
    </JumpList.JumpList>
</Application>